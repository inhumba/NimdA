											input(type="text", value="Amsterdam,Beijing,กรุงเทพ,นครปฐม,A", data-role="tagsinput")

								.col-xs-6

									.panel.panel-default
										.panel-heading.separator
											h2.panel-title Tags with select
										.panel-body

											select(data-role="tagsinput", multiple)
												option(value="Amsterdam") Amsterdam
												option(value="Beijing") Beijing
												option(value="กรุงเทพ") กรุงเทพ
												option(value="นครปฐม") นครปฐม
												option(value="A") A

