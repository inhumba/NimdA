doctype html
html(lang="en", class="no-js")
	head

		//- Meta include
		- var title = "Tags";
		include meta

	body

		.wrapper

			//- Adminbar include
			//- include adminbar

			//- Header include
			include header

			//- Sidebar Left include
			//- include sidebarleft

			// Main
			main.main

				// Page Topic
				.topbar
					h1 <i class="fa fa-bullseye"></i> Tags

				section.content

					section.section

						.container-fluid
							.row

								.col-xs-6

									.panel.panel-default
										.panel-heading.separator
